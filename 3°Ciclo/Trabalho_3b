/*2- Lista Circular e duplamente encadeada:

Uma clinina medica atende pacientes por ordem de chegada, mas depois de atender o ultimo paciente, volta ao inicio da fila caso hava necessidade de atendimento continuo. É possível voltar e ir entre as senhas navegadas.

Cada paciente deve ter um código e um nome.

O sistema deve conter os métodos:

adicionarPaciente(int senha, String nome)

chamarProximo()

chamarAnterior()

ListarFila()*/

import java.util.Scanner;

class Paciente{
  int senha = 0;
  String nome;
  Paciente proximo;

  public Paciente(int senha, Sting nome){
    this.senha = senha;
    this.nome = nome;
    this.proximo = null;
  }
}

class ControlePacientes{
  Paciente primeiro;
  Paciente ultimo;

  public void adicionarPaciente(int senha, Sting nome){
    Paciente novopaciente = new Paciente(senha, nome);
    if(primeiro == null){
      primeiro = novopaciente;
      ultimo = novopaciente;
    } else{
      ultimo.proximo = novopaciente;
      ultimo = novopaciente;
    }  
  System.out.println("Paciente adicionado!");
  }

  public void chamarProximo(){
    
    if(primeiro == null){
      System.out.println("Não há pacientes para chamar!");
    } else{
        Paciente proximopaciente = new Paciente(id, nome);
        proximopaciente = primeiro.proximo;
        ultimo.proximo = primeiro;
        ultimo = ultimo.proximo;
        prrimeiro = proximopaciente;
        System.out.println("Chamando " + primeiro.nome + primeiro.semha);
    }
  }

  public void chamarAnterior(){
       if(primeiro == null){
      System.out.println("Não há pacientes para chamar!");
    } else{
        Paciente anterirorpaciente = new Paciente(id, nome);
        anterirorpaciente = ultimo;
        ultimo.proximo = primeiro;
        ultimo = ultimo.proximo;
        prrimeiro = proximopaciente;
        System.out.println("Chamando " + primeiro.nome + primeiro.semha);
    }
  }
  }

}
public class ListaPacientes{
    public static void main(String[] args) {
        ControlePacientes controle = new ControlePacientes();
        int escolha;
        Scanner scanner = new Scanner(System.in);

        do {
            System.out.println("1 - Adicionar paciente");
            System.out.println("2 - Chamar próximo paciente");
            System.out.println("3 - Chamar paciente anterior");
            System.out.println("4 - Sair do programa");
            System.out.println("Escolha uma das opções: ");
            escolha = scanner.nextInt();
            scanner.nextLine();

            switch (escolha) {
                case 1:
                    int senha++;
                    System.out.println("Digite o nome do paciente:");
                    String nome = scanner.nextLine();
                    System.out.println("A senha de " + nome + " e: " + senha);
                    adicionarPaciente(senha,nome);
                break;

                case 2:
                    chamarProximo();
                break;

                case 3:
                    chamarAnterior();
                break;

                case 4:
                    System.out.println("Encerrando o programa...");
                break;

                default:
                    System.out.println("Digite um valor valido");
                break;
            }
        } while (escolha != 4);
    }
}
